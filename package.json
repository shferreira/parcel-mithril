{
  "license": "MIT",
  "scripts": {
    "serve": "parcel app/index.html --open",
    "build": "parcel build app/index.html --no-source-maps --public-url .",
    "rebuild": "yarn clean && yarn build --no-cache",
    "deploy": "yarn rebuild && echo '/* /index.html 200' >| dist/_redirects && netlify -p dist",
    "clean": "rimraf dist .cache",
    "lint": "eslint app/**/*.js app/**/*.jsx",
    "lint:css": "stylelint '**/*.less' '**/*.css' --syntax less",
    "lint:watch": "esw ./app --ext .js --ext .jsx -w --color --clear",
    "test": "jest"
  },
  "dependencies": {
    "mithril": "^1.1.6"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-transform-react-jsx": "^7.3.0",
    "@babel/plugin-transform-runtime": "^7.3.4",
    "parcel": "^1.11.0",
    "parcel-plugin-inliner": "^1.0.6",
    "postcss-remove-unused-css": "^1.0.4"
  },
  "optionalDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.15.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-html": "^5.0.3",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-watch": "^4.0.2",
    "husky": "^1.3.1",
    "jasmine": "^3.3.1",
    "rimraf": "^2.6.3",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-processor-html": "^1.0.0"
  },
  "babel": {
    "presets": [
      "@babel/env"
    ],
    "plugins": [
      [
        "@babel/transform-react-jsx",
        {
          "pragma": "m"
        }
      ],
      "@babel/transform-runtime"
    ]
  },
  "browserslist": [
    "> 0.6%",
    "not ie 11",
    "not op_mini all"
  ],
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "postcss-remove-unused-css": {
        "path": "./app",
        "exts": [
          ".js",
          ".jsx",
          ".html"
        ]
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:promise/recommended",
      "airbnb-base",
      "plugin:react/recommended"
    ],
    "plugins": [
      "promise",
      "no-loops"
    ],
    "parserOptions": {
      "parser": "babel-eslint",
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true,
        "jsx": true
      }
    },
    "globals": {
      "document": true
    },
    "settings": {
      "react": {
        "pragma": "m"
      }
    },
    "rules": {
      "max-len": [
        "error",
        {
          "code": 80
        }
      ],
      "quotes": [
        "error",
        "double"
      ],
      "promise/prefer-await-to-callbacks": "error",
      "promise/prefer-await-to-then": "error",
      "no-loops/no-loops": 2,
      "react/no-deprecated": "off"
    }
  },
  "stylelint": {
    "processors": [
      "stylelint-processor-html"
    ],
    "extends": "stylelint-config-standard"
  }
}
